<!DOCTYPE html>
<html lang="en">
<!-- HEAD -->
<%- include('./partials/head')%>
<body class="login">
    <!-- HEADER -->
    <%- include('./partials/header') %>
<main class="contenedor">
    <form  action="/user/login" method="POST" id="form">
        <h1 class="titulolog">iniciar sesión</h1>
        <div class="form">
           <div class="contenedorA">
                <label for="user">Nombre de Usuario:</label>
                <input class="input" type="username" name="username" id="user" value=<%= locals.old && old.username ? old.username : null %> >
                <small class="small7"></small>
           </div>
            <div class="contenedorA">
                <label class="c" for="contraseña">Contraseña:</label>
                <input class="input" type="password" name="password" id="contraseña"  >
                <small class="small8"></small>
                <% if(locals.errors && (errors.password || errors.username)){ %>
                    <% if(errors.password && errors.username){%>
                        <small> complete los campos </small>
                    <%} %> 
                    <% if(errors.password){%>
                        <small> <%= errors.password.msg %> </small>
                    <%}%>
                    <% if(errors.username){ %> 
                        <small> <%= errors.username.msg %> </small>
                    <%} %> 
                    
                  <% } %>
                  
                 
            </div>
            <div class="recordarme">
                <input type="checkbox" name="recordame" id="checkbox">
                <label class="r" for="recordame">Recordarme</label>
            </div>
            <% if(locals.invalid){ %>
                <small> <%= invalid %> </small>
              <% } %>          
            <div class="contenedorA">
                <input class="btn" type="submit" value="Ingresar">
            </div>
            <div class="contenedorA">
                <a  class="btn"  href="register">¿Desea crear una cuenta?</a>
            </div>
        </div>        
    </form>
    <script src="/javascripts/login.js"></script>
</main>    
</body>
</html>